{
   "$schema": "https://schema.tauri.app/config/2",
   "productName": "Sprite Font Generator",
   "version": "0.1.0",
   "identifier": "com.tuan-kiet.SpriteFontGenerator",
   "build": {
      "beforeDevCommand": "pnpm dev",
      "devUrl": "http://localhost:1420",
      "beforeBuildCommand": "pnpm build",
      "frontendDist": "../dist"
   },
   "app": {
      "windows": [
         {
            "title": "Sprite Font Generator",
            "width": 1200,
            "height": 800,
            "minWidth": 900,
            "minHeight": 700,
            "decorations": false,
            "transparent": false,
            "center": true,
            "dragDropEnabled": true
         }
      ],
      "security": {
         "csp": null
      }
   },
   "bundle": {
      "active": true,
      "targets": "all",
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
   }
}
